<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="rulehellowifi" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="rulehellowifi" scope="public">
    <example>Sarah hello wifi</example>
    <tag>out.action=new Object(); </tag>
    
    <item>SARAH</item>
    <one-of>
	  <item>Hello wifi</item>
	</one-of>

    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/hellowifi";</tag>
  </rule> 
</grammar>
